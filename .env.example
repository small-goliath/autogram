# Application Configuration
APP_NAME=Autogram API
APP_VERSION=1.0.0
DEBUG=False

# Database Configuration
# Local SQLite (for development)
# DATABASE_URL=sqlite+aiosqlite:///./autogram.db

# Supabase PostgreSQL (recommended for production)
# Get your connection string from: https://supabase.com/dashboard/project/_/settings/database
# Format: postgresql+asyncpg://postgres.{project-ref}:{password}@{host}:5432/{database}
DATABASE_URL=postgresql+asyncpg://postgres.{project-ref}:your-password@db.{project-ref}.supabase.co:5432/postgres

# Database pool settings
DATABASE_ECHO=False

# Security Configuration
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-minimum-32-characters-long

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# Instagram Configuration
INSTALOADER_SESSION_DIR=/tmp/instaloader_sessions
INSTAGRAPI_SESSION_DIR=/tmp/instagrapi_sessions
INSTAGRAM_REQUEST_DELAY=2.0

# Pagination Configuration
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=500

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting (optional - for future implementation)
RATE_LIMIT_ENABLED=False
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (optional - for future notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@autogram.com

# AI Configuration (optional - for future AI comment generation)
# OPENAI_API_KEY=your-openai-api-key
# AI_MODEL=gpt-4
# AI_MAX_TOKENS=150

# Redis Configuration (optional - for caching and rate limiting)
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=300

# Monitoring (optional - for production)
# SENTRY_DSN=your-sentry-dsn
# ENVIRONMENT=production
